{
  "name": "curivai",
  "version": "0.1.0",
  "description": "AI workbench that transforms overseas information sources into Chinese creator-ready content",
  "type": "module",
  "license": "Apache-2.0",
  "bin": {
    "curivai": "./src/cli/index.ts"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "server": "tsx src/cli/index.ts server",
    "web:dev": "cd web && pnpm dev",
    "web:build": "cd web && pnpm build",
    "build": "cd web && pnpm build"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^13.1.0",
    "cosmiconfig": "^9.0.0",
    "franc-min": "^6.2.0",
    "hono": "^4.7.0",
    "jsdom": "^26.1.0",
    "mjml": "^4.18.0",
    "nanoid": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "rss-parser": "^3.13.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jsdom": "^27.0.0",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.13.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
